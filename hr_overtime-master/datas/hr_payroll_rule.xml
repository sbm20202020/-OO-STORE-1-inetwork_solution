<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">



		 <record id="hr_payroll_salary_structure_type_overtime" model="hr.payroll.structure.type">
            <field name="name">Overtime</field>
            <field name="country_id" eval="False"/>
        </record>

        <record id="hr_payroll_salary_structure_emp_overtime" model="hr.payroll.structure">
            <field name="name">Employee Overtime</field>
            <field name="country_id" eval="False"/>
            <field name="regular_pay" eval="True"/>
            <field name="type_id" ref="hr_payroll_salary_structure_type_overtime"/>
        </record>


		
		<record id="hr_payroll_hr_rule_overtime" model="hr.salary.rule">
			<field name="name">Overtime</field>
			<field name="sequence" eval="10"/>
			<field name="code">OT</field>
			<field name="category_id" ref="hr_payroll.ALW"/>
			<field name="condition_select">none</field>
			<field name="amount_select">code</field>
			<field name="amount_python_compute">result=(payslip.days*(contract.wage / (30*8)))+(payslip.cash)</field>
		 <field name="struct_id" ref="hr_payroll_salary_structure_emp_overtime"/>

		</record>


		 <record id="hr_payslip_form_inherit" model="ir.ui.view">
            <field name="name">hr_payslip_form</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="cash" invisible="1"/>
					<field name="days" invisible="1"/>
                </xpath>
            </field>
        </record>

	</data>
</openerp>
		