<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stock_inventory_receipt_from_view" model="ir.ui.view">
            <field name="name">Inventory Receipt</field>
            <field name="model">stock.inventory.receipt</field>
            <field name="arch" type="xml">
                <form>
                    <group col="4">
                        <field name="location_id"/>
                        <field name="des_location_id"/>
                        <field name="product_id"/>
                        <field name="serial"/>
                        <field name="qty"/>
                        <field name="partner"/>
                        <field name="picking_type_id" readonly="1"/>
                    </group>
                    <footer>
                        <button name="create_picking" string="Create Receipt" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <act_window context="{'model_id': active_id}" id="act_menu_receipt" name="Create Receipt" res_model="stock.inventory.receipt" target="new" view_mode="form"/>

        <!--        sales order wizard-->
        <record id="sales_order_from_view" model="ir.ui.view">
            <field name="name">Create SO</field>
            <field name="model">sales.order.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group col="4">
                        <field name="date_order"/>
                    </group>
                    <footer>
                        <button name="create_so" string="Create SO" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <act_window context="{'model_id': active_id}" id="act_menu_so" name="Create SO" res_model="sales.order.wizard" target="new" view_mode="form"/>

    </data>
</odoo>