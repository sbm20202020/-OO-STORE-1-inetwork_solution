<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="sale_order_form_add_cst_po_number_id" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="cst_po_number" />
                </xpath>

            </field>
        </record>
        <record id="purchase_order_form_add_cst_po_number_id" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="cst_po_number" />

                </xpath>
            </field>
        </record>

        <record id="stock_picking_form_add_contacts" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="attention" options="{'no_create': True}"/>
                    <field name="attention_ids" invisible="1"/>
                    <field name="cst_po_number"/>
                </xpath>
                <xpath expr="//field[@name='location_dest_id']" position="after">
                    <field name="employee_id"/>
                </xpath>

                <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
                    <field name="lot_id" groups="stock.group_production_lot" context="{'default_product_id': product_id}"/>
                </xpath>
            </field>
        </record>



    </data>
</odoo>