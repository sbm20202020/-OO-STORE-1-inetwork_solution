<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!--Adding a salary rule for loan-->
	<data noupdate="0">
        <record id="loan_structure_type_worker" model="hr.payroll.structure.type">
            <field name="name">Loan</field>
            <field name="country_id" eval="False"/>
            <field name="wage_type">hourly</field>
        </record>
        <record id="loan_structure_001" model="hr.payroll.structure">
            <field name="name">Loan</field>
            <field name="type_id" ref="loan_structure_type_worker"/>
            <field name="regular_pay" eval="True"/>
            <field name="country_id" eval="False"/>
        </record>
		<record id="hr_rule_loan" model="hr.salary.rule">
            <field name="code">LO</field>
            <field name="name">Loan</field>
            <field name="category_id" ref="hr_payroll.DED"/>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = inputs.LO and - (inputs.LO.amount)</field>
            <field name="appears_on_payslip" eval="True"/>
            <field name="sequence" eval="190"/>
            <field name="struct_id" ref="loan_structure_001"/>
        </record>

<!--        <record id="hr_rule_input_loan" model="hr.rule.input">-->
<!--            <field name="code">LO</field>-->
<!--            <field name="name">Loan</field>-->
<!--            <field name="input_id" ref="hr_rule_loan"/>-->
<!--        </record>-->

        <record id="group_cancel_loan" model="res.groups">
        <field name="name">Cancel Loan</field>
    </record>

	</data>
</odoo>
