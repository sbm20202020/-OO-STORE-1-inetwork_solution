<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="sales_order_confirmation_template" model="mail.template">
            <field name="name">Sales Order Confirmation e-mail template</field>
            <field name="email_from">${object.user_d and object.user_id.email or ''}</field>
            <field name="subject">Congratz ${object.name}</field>
            <field name="email_to">${object.email|safe}</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="auto_delete" eval="True"/>

            <field name="body_html">
                <![CDATA[
	          <p>Dear HRM${(object.name)},<br/><br/>
               Kindly be noted that this Sales order is Confirmed.
                  Thanks,<br/>
                  ${(object.company_id.name)}
	    ]]>
            </field>
        </record>

    </data>
</odoo>