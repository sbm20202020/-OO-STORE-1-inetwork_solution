<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_missing_item_wizard" model="ir.ui.view">
            <field name="name">Missing Items</field>
            <field name="model">missing.item.wizard</field>
            <field name="arch" type="xml">
                <form string="Missing Items">
                    <group>
                        <group>
                            <field name="inventory_id" readonly="1" options='{"no_create": True}'/>
                            <field name="line_ids" widget="many2many_tags" options='{"no_create": True}' invisible="1"/>
                            <field name="product_ids" widget="many2many_tags" options='{"no_create": True}'/>
                        </group>
                    </group>
                    <footer>
                        <button name="create_inventory_adjustment_for_missing" string="Create Inventory Adjustment For Missing Items" type="object"
                                class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id='wizard_missing_item_action' model='ir.actions.act_window'>
            <field name="name">Missing Items</field>
            <field name="res_model">missing.item.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_missing_item_wizard"/>
            <field name="target">new</field>
        </record>
        <!--<menuitem id="menu_wizard_missing_item" name="Missing Items" parent="hr_payroll.menu_hr_payroll_payslips"-->
                  <!--action="wizard_missing_item_action"-->
                   <!--sequence="50"/>-->
    </data>
</odoo>