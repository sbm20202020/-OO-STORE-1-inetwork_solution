<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="hr_leave_next_employee_wizard_form" model="ir.ui.view">
            <field name="name">hr.leave.next.employee.form</field>
            <field name="model">hr.leave.next.employee</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                            <field name="name" required="1"/>
                            <field name="leave_type" required="1" string="Time Off Type"/>

                        </group>
                    <field name="employees" readonly="1">
                        <tree>
                            <field name="name"/>
                            <field name="remaining_leaves" string="Duration(days)"/>
                        </tree>
                    </field>

         
                     <footer>
                         <button name="apply" string="Apply" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>

                </form>
            </field>
        </record>

<!-- ACTION     -->

        <record id="hr_leave_next_employee_wizard" model="ir.actions.act_window">
            <field name="name">Leave Time Off To Next Year</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.leave.next.employee</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>



</odoo>