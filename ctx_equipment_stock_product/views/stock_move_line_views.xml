<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_stock_move_line_operation_tree_inherit_equip" model="ir.ui.view">
            <field name="name">stock.move.line.operations.tree.inherit.equip</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
            <field name="arch" type="xml">
                <field name="lot_name" position="after">
                    <field name="picking_code" invisible="1"/>
                    <field name="is_equipment" invisible="1"/>
                    <field name="create_equipment"
                           attrs="{'readonly':['|',('picking_code', '!=', 'incoming'),'&amp;', ('package_level_id', '!=', False), ('parent.picking_type_entire_packs', '=', True)],'invisible':[('is_equipment','=',False)]}"
                           groups="stock.group_production_lot"/>
                </field>
            </field>
        </record>


    </data>
</odoo>
