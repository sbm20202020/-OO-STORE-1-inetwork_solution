<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

   <record id="add_new_fields_to_overtime_inherit" model="ir.ui.view">
        <field name="name">hr.overtime.form.inherit</field>
        <field name="model">hr.overtime.rule</field>
        <field name="inherit_id" ref="rm_hr_attendance_sheet.hr_overtime_rule_form_view"/>
        <field name="arch" type="xml">
              <xpath expr="//field[@name='active_after']" position="replace">

                  <field name="active_after" attrs="{'invisible':[('type','==','workday')]}"/>
            </xpath>
               <xpath expr="//field[@name='rate']" position="replace">
                <field name="rate" attrs="{'invisible':[('type','==','workday')]}"/>
            </xpath>

            <!-- position values: after|before|replace|attributes|inside -->
            <xpath expr="//field[@name='rate']" position="after">
                <field name="first_sign_out" attrs="{'required':[('type','=','workday')]}"/>
                <field name="sec_sign_out" attrs="{'required':[('type','=','workday')]}"/>
                <!-- Add your fields or attributes here -->

           <field name="rate_ids" attrs="{'invisible':[('type','!=','workday')]}">
                        <tree editable="bottom">
                              <field name="from_time" invisible="1"/>
                            <field name="to_time" invisible="1"/>
                              <field name="request_hour_from"/>
                            <field name="request_hour_to"/>
                                  <field name="rate"/>
                             <field name="overtime_id" invisible="1"/>
                        </tree>
                        </field>
            </xpath>
        </field>
    </record>
<record id="view_overtime_inherit_tree" model="ir.ui.view">
    <field name="name">view..inherit.overtime.tree</field>
    <field name="model">hr.overtime.rule</field>
    <field name="inherit_id" ref="rm_hr_attendance_sheet.hr_overtime_rule_tree_view"/>
    <field name="arch" type="xml">

            <xpath expr="//field[@name='active_after']" position="attributes">

               <attribute name="invisible">1</attribute>
            </xpath>
         <xpath expr="//field[@name='rate']" position="attributes">
               <attribute name="invisible">1</attribute>
            </xpath>
    </field>
</record>
        <!-- Inherit Form View to Modify it -->
        <record id="view_inherit_hr_attendance_policy_form_view_form" model="ir.ui.view">
            <field name="name">view.inherit.hr_attendance_policy_form_view.form</field>
            <field name="model">hr.attendance.policy</field>
            <field name="inherit_id" ref="rm_hr_attendance_sheet.hr_attendance_policy_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='active_after']" position="attributes">
                 <field name="from_time" widget="float_time"/>
               <attribute name="invisible">1</attribute>
            </xpath>
                  <xpath expr="//field[@name='rate']" position="attributes">

               <attribute name="invisible">1</attribute>
            </xpath>

            </field>
        </record>
    </data>
</odoo>