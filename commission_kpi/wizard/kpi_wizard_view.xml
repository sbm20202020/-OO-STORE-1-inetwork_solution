<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="kpi_wizard_view" model="ir.ui.view">
        <field name="name">Wizard</field>
        <field name="model">kpi.wizard</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <group>
                    <group>
                        <field name="date_from"/>
                       <field name="date_to"/>
                    </group>
                    <group>
                        <field name="quarter_date"/>
                        <field name="kpi_ref_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <group>
                    <field name="sales_person" widget="many2many_tags" options="{'no_create': True, 'no_open': True,'no_edit':True}"/>
                </group>
                <footer>
                    <button name="generate_xlsx_report" context="{'xls_export':1}" string="Excel" type="object" default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_kpi_wizard" model="ir.actions.act_window">
        <field name="name">KPI commission Report</field>
        <field name="res_model">kpi.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="kpi_wizard_view"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_kpi_reports"
              name="KPI Commission Report"
              sequence="2"
              parent="commission_kpi.kpi_commission_menu"
              action="action_kpi_wizard"
             />



</odoo>