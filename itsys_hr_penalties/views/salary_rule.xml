<odoo>
    <data>
 <record id="hr_payroll_salary_structure_type_penalty" model="hr.payroll.structure.type">
            <field name="name">Penalty</field>
            <field name="country_id" eval="False"/>
        </record>

        <record id="hr_payroll_salary_structure_emp_penalty" model="hr.payroll.structure">
            <field name="name">Employee Penalties</field>
            <field name="country_id" eval="False"/>
            <field name="regular_pay" eval="True"/>
            <field name="type_id" ref="hr_payroll_salary_structure_type_penalty"/>
        </record>


        <record id="hr_penalty_rule" model="hr.salary.rule">
		   <field name="name">Hr Penalty</field>
		   <field name="sequence" eval="100"/>
		   <field name="code">Pen</field>
		   <field name="category_id" ref="hr_payroll.DED"/>
		   <field name="amount_select">code</field>
		   <field name="amount_python_compute">result=-((payslip.day_pen*(contract.wage / 30))+payslip.penalty+payslip.cash_emp)</field>
	      <field name="struct_id" ref="hr_payroll_salary_structure_emp_penalty"/>


        </record>


    </data>
</odoo>