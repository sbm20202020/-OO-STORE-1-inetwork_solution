<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_hr_employee_form_inherit_employee_email_notification" model="ir.ui.view">
            <field name="name">hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='work_location']" position="after">
                    <field name="need_employee_contract" invisible="1"/>
                    <field name="need_Form1_Social_insurance" invisible="1"/>
                    <field name="need_Form6" invisible="1"/>
                    <field name="need_medical_card" invisible="1"/>
                    <field name="need_card_id" invisible="1"/>
                    <field name="need_military_certificate" invisible="1"/>
                    <field name="need_driver_license" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
