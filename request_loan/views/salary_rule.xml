<odoo>
    <data noupdate="0">


       <record id="hr_payroll_salary_structure_type_ind_emp_loan" model="hr.payroll.structure.type">
            <field name="name">Loan</field>
            <field name="country_id" eval="False"/>
        </record>

        <record id="hr_payroll_salary_structure_ind_emp_loan" model="hr.payroll.structure">
            <field name="name">Employee Loans</field>
            <field name="country_id" eval="False"/>
            <field name="regular_pay" eval="True"/>
            <field name="type_id" ref="hr_payroll_salary_structure_type_ind_emp_loan"/>
        </record>


        <record id="hr_loan_rule" model="hr.salary.rule">
		   <field name="name">Hr loan</field>
		   <field name="sequence" eval="100"/>
		   <field name="code">loan</field>
		   <field name="category_id" ref="hr_payroll.DED"/>
		   <field name="amount_select">code</field>
		   <field name="amount_python_compute">result=-(payslip.loan)</field>
           <field name="struct_id" ref="hr_payroll_salary_structure_ind_emp_loan"/>

	       </record>
    </data>
</odoo>